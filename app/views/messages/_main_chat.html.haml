.chat-main
  .chat-header
    .chat-header__group
      %h2.chat-header__group__name jjjjjjj
      %ul.chat-header__group__menber
        %li.chat-header__group__menber__list kkkkk
        %li.chat-header__group__menber__list jjjjjj

    =link_to "#" do
      .edit-btn Edit

  .messages
    .message
      .message-info
        %p.message-info__talker 送信者
        %p.message-info__date 日時
      %p.message-text fffffffff

  .form
    = form_for [@group, @message],html:{class:"new-message"} do |f|
      .input-box
        = f.text_field :content, id: "message_content", placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
      